{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iskra.space/schemas/canon_manifest.schema.json",
  "type": "object",
  "required": ["name", "essence", "dimensions", "files", "ci_rules"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "essence": { "type": "string", "minLength": 1 },
    "dimensions": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "uniqueItems": true
    },
    "files": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "ci_rules": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
